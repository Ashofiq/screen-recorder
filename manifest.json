{
  "manifest_version": 3,
  "name": "Screen Recorder",
  "description": "A Chrome extension to record your screen",
  "version": "1.0",
  "permissions": [
    "activeTab",
    "desktopCapture",
    "storage"
  ],
  "background": {
    "scripts": ["background.js"]
  },
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "icon.png",
      "48": "icon.png",
      "128": "icon.png"
    }
  }
}
